// file exist


    if (params.trimmomatic) {
        if ((params.trimmomatic).toString()) {
            if (params.trimmomatic == 'SE') {
                println ('SE')
            }
            if (params.trimmomatic == 'PE') {
                println ('PE')
            }
            else {
                throw new Error ('valor de parámetro no válido')
            }
        } else {
            throw new Error ('valor de parámetro no válido')
        }
    }
        if (validate_file(file_each)['flag'][0] == true){
            
            if (validate_file(file_each)['ext'][0] == 'gz') {
                UNZIPFILE(file(file_each)).label = "UNZIPFILE_${file_each}"
            }
            else if (validate_file(file_each)['ext'][0] == 'tar') {
                print ('descomprimiendo en tar ...')
            }
            else {
                println ('formato de compresión no soportado')
            }
        } else {
            // no compress
            println ('partir flujo sin descomprimir.')
        }
    }